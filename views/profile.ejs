<!doctype html>
<html>
<head>
    <title>place 2 b</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
<% console.log("the data is", data) %>
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/favs" class="btn btn-default btn-sm">My Favorites</a>
    </div>

    <div class="row">
      <h2>Search for a location</h2>
      <% if (user.local.email) { %>
        <form action="/profile" method="get">
          <input type="text" name="search" value="" placeholder="City">
          <button type="submit">search</button>
        </form>

      </div>
      <% } %>
        <div class="col-lg-12">
          <h3>Places of interest</h3>

          <ul class="messages">
            <% for(var i=0; i<data.length; i++) {%>
              <li class="message">
                <span class="place"><%= data[i].venue.name %></span>
                <span class="category"><%= data[i].venue.categories[0].name %></span>
                <img class="icon" src="<%=`${data[i].venue.categories[0].icon.prefix}bg_64${data[i].venue.categories[0].icon.suffix}`%>" >
                <span class="location"><%= data[i].venue.location.address %></span>
                <span class="city"><%= data[i].venue.location.city %> </span>

              <span class="save"><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              </li>
            <% } %>



</div>

<script src="main.js"></script>

</body>
</html>
